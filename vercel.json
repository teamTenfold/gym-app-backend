{
  "version": 2,
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket.io"
    }
  ],
  "routes": [
    {
      "src": "/socket.io",
      "dest": "/api/socket.io",
      "headers": {
        "Connection": "Upgrade",
        "Upgrade": "websocket"
      }
    }
  ],
  "functions": {
    "api/socket.io": {
      "memory": 3008,
      "maxDuration": 30
    }
  }
}
